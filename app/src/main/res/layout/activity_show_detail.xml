<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ShowDetail">

    <EditText
        android:id="@+id/N"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <EditText
        android:id="@+id/AG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFEB3B"
        app:layout_constraintEnd_toEndOf="@+id/N"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/N"
        app:layout_constraintTop_toBottomOf="@+id/N" />

    <EditText
        android:id="@+id/ADDRESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/AG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AG"
        app:layout_constraintTop_toBottomOf="@+id/MNUM" />

    <EditText
        android:id="@+id/DIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFEB3B"
        app:layout_constraintEnd_toEndOf="@+id/AG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AG"
        app:layout_constraintTop_toBottomOf="@+id/ADDRESS" />

    <EditText
        android:id="@+id/AMTPEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFEB3B"
        app:layout_constraintEnd_toEndOf="@+id/DIS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/DIS"
        app:layout_constraintTop_toBottomOf="@+id/DIS" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#d50000"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/AMTPEND"
        app:layout_constraintStart_toStartOf="@+id/AMTPEND"
        app:layout_constraintTop_toBottomOf="@+id/AMTPEND" />

    <EditText
        android:id="@+id/MNUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFEB3B"
        app:layout_constraintEnd_toEndOf="@+id/AG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AG"
        app:layout_constraintTop_toBottomOf="@+id/AG" />
</androidx.constraintlayout.widget.ConstraintLayout>