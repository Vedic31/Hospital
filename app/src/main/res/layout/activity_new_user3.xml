<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".NewUser3">

    <Button
        android:id="@+id/common_cold"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:text="Common cold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkup"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="General Checkup"
        app:layout_constraintEnd_toEndOf="@+id/common_cold"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="@+id/common_cold"
        app:layout_constraintTop_toBottomOf="@+id/common_cold" />

    <Button
        android:id="@+id/Asthma"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Asthamatic attack"
        app:layout_constraintEnd_toEndOf="@+id/checkup"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/checkup"
        app:layout_constraintTop_toBottomOf="@+id/checkup" />

    <Button
        android:id="@+id/Heart_attack"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Heart Attack"
        app:layout_constraintEnd_toEndOf="@+id/Asthma"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/Asthma"
        app:layout_constraintTop_toBottomOf="@+id/Asthma" />

    <Button
        android:id="@+id/InjuryMin"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Injury (Minor)"
        app:layout_constraintEnd_toEndOf="@+id/Heart_attack"
        app:layout_constraintStart_toStartOf="@+id/Heart_attack"
        app:layout_constraintTop_toBottomOf="@+id/Heart_attack" />

    <Button
        android:id="@+id/Injmax"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Injury (Major)"
        app:layout_constraintEnd_toEndOf="@+id/InjuryMin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/InjuryMin"
        app:layout_constraintTop_toBottomOf="@+id/InjuryMin" />

    <Button
        android:id="@+id/Ncovid"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="Ncovid-19"
        app:layout_constraintEnd_toEndOf="@+id/Injmax"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/Injmax"
        app:layout_constraintTop_toBottomOf="@+id/Injmax" />

    <Button
        android:id="@+id/custom_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="Custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ncovid" />

    <Button
        android:id="@+id/BCK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="44dp"
        android:text="Back"
        android:background="#EF6C00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ncovid" />

</androidx.constraintlayout.widget.ConstraintLayout>